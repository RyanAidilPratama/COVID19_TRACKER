            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone"
            app:cardBackgroundColor="#58D38B"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:contentPadding="4dp"
            app:layout_constraintBottom_toBottomOf="@id/cp_1_phone_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/cp_1_phone_1"
            app:layout_constraintTop_toTopOf="@id/cp_1_phone_1">

            <TextView
                android:id="@+id/cp_1_phone_number_2"
