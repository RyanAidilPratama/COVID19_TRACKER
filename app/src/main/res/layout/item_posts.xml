<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Theme.MaterialComponents"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp"
    app:contentPaddingBottom="8dp"
    app:contentPaddingRight="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/card_hospital_decoration"
            android:layout_width="3dp"
            android:layout_height="0dp"
            android:background="#68C0F6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/posts_name"
            style="@style/MainLabel"
            app:layout_constraintBottom_toTopOf="@id/posts_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/card_hospital_decoration"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@tools:sample/cities" />

        <TextView
            android:id="@+id/cp_name_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="4"
            android:textStyle="normal"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/cp_1_phone_1"
            app:layout_constraintEnd_toEndOf="@id/posts_name"
            app:layout_constraintStart_toStartOf="@id/posts_name"
            app:layout_constraintTop_toBottomOf="@id/posts_name"
            tools:text="@tools:sample/full_names" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cp_1_phone_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone"
            app:cardBackgroundColor="#58D38B"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:contentPadding="4dp"
            app:layout_constraintBottom_toTopOf="@id/cp_1_phone_3"
            app:layout_constraintEnd_toStartOf="@id/cp_1_phone_2"
            app:layout_constraintStart_toEndOf="@id/card_hospital_decoration"
            app:layout_constraintTop_toBottomOf="@id/cp_name_1">

            <TextView
                android:id="@+id/cp_1_phone_number_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_call_black_24dp"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                tools:text="@tools:sample/us_phones" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cp_1_phone_2"
