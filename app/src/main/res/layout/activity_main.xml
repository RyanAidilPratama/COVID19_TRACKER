<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/container_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_shape_bk"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_login_bk"
            android:contentDescription="@string/logo_desc" />

    </LinearLayout>

    <ImageView
        android:id="@+id/logo_province"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/logo_desc"
        android:src="@drawable/logo_sulteng"
        app:layout_constraintEnd_toStartOf="@id/app_name_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/app_name_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/app_creator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/logo_province"
        app:layout_constraintTop_toTopOf="@id/logo_province" />

    <TextView
        android:id="@+id/app_creator"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/creator"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/logo_province"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/app_name_title"
        app:layout_constraintTop_toBottomOf="@id/app_name_title" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@id/container_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo_province"
        tools:listitem="@layout/menu_item" />

    <ScrollView
        android:id="@+id/container_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/container_header">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/information_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:text="@string/current_info"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/information_date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/information_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_update"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@id/card_info_container"
                app:layout_constraintEnd_toStartOf="@id/information_date_value"
                app:layout_constraintStart_toStartOf="@id/information_label"
                app:layout_constraintTop_toBottomOf="@id/information_label" />

            <TextView
                android:id="@+id/information_date_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/information_date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/information_date"
                app:layout_constraintTop_toTopOf="@id/information_date"
                tools:text="Sabtu, 21 Mar 2020 21.15" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/card_info_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/information_date">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/positive_card"
                    android:layout_width="100dp"
                    android:layout_height="130dp"
                    android:layout_margin="16dp"
                    app:cardBackgroundColor="#F4D5D5"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp"
                    app:contentPadding="14dp"
                    app:layout_constraintBottom_toTopOf="@id/card_info_pdp"
                    app:layout_constraintEnd_toStartOf="@id/dead_card"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/positive_icon"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            app:cardBackgroundColor="#E24747"
                            app:cardCornerRadius="50dp"
                            app:layout_constraintBottom_toTopOf="@id/positive_count"
                            app:layout_constraintEnd_toStartOf="@id/positive_title"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/positive_title"
                            android:layout_width="51dp"
                            android:layout_height="19dp"
                            android:layout_marginStart="6dp"
                            android:text="@string/positive"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@id/positive_icon"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/positive_icon"
                            app:layout_constraintTop_toTopOf="@id/positive_icon" />


                        <TextView
                            android:id="@+id/positive_count"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toTopOf="@id/positive_person_label"
                            app:layout_constraintEnd_toEndOf="@id/positive_title"
                            app:layout_constraintStart_toStartOf="@id/positive_icon"
                            app:layout_constraintTop_toBottomOf="@id/positive_title"
                            tools:text="32" />

                        <TextView
                            android:id="@+id/positive_person_label"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:gravity="center"
                            android:text="@string/person"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@id/positive_count"
                            app:layout_constraintStart_toStartOf="@id/positive_count"
                            app:layout_constraintTop_toBottomOf="@id/positive_count" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/dead_card"
                    android:layout_width="100dp"
                    android:layout_height="130dp"
                    android:layout_margin="16dp"
                    app:cardBackgroundColor="#FAE4B8"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp"
                    app:contentPadding="12dp"
                    app:layout_constraintBottom_toBottomOf="@id/positive_card"
                    app:layout_constraintEnd_toStartOf="@id/negative_card"
                    app:layout_constraintStart_toEndOf="@id/positive_card"
                    app:layout_constraintTop_toTopOf="@id/positive_card">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/dead_icon"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            app:cardBackgroundColor="#E2CD47"
                            app:cardCornerRadius="50dp"
                            app:layout_constraintBottom_toTopOf="@id/dead_count"
                            app:layout_constraintEnd_toStartOf="@id/dead_title"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/dead_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="@string/dead"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@id/dead_icon"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/dead_icon"
                            app:layout_constraintTop_toTopOf="@id/dead_icon" />


                        <TextView
                            android:id="@+id/dead_count"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toTopOf="@id/dead_person_label"
                            app:layout_constraintEnd_toEndOf="@id/dead_title"
                            app:layout_constraintStart_toStartOf="@id/dead_icon"
                            app:layout_constraintTop_toBottomOf="@id/dead_title"
                            tools:text="16" />

                        <TextView
                            android:id="@+id/dead_person_label"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:gravity="center"
                            android:text="@string/person"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@id/dead_count"
                            app:layout_constraintStart_toStartOf="@id/dead_count"
                            app:layout_constraintTop_toBottomOf="@id/dead_count" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/negative_card"
                    android:layout_width="100dp"
                    android:layout_height="130dp"
                    android:layout_margin="16dp"
                    app:cardBackgroundColor="#E6F3C2"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp"
                    app:contentPadding="16dp"
                    app:layout_constraintBottom_toBottomOf="@id/dead_card"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/dead_card"
                    app:layout_constraintTop_toTopOf="@id/dead_card">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/negative_icon"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            app:cardBackgroundColor="#47E25B"
                            app:cardCornerRadius="50dp"
                            app:layout_constraintBottom_toTopOf="@id/negative_count"
                            app:layout_constraintEnd_toStartOf="@id/negative_title"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/negative_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="@string/negative"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@id/negative_icon"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/negative_icon"
                            app:layout_constraintTop_toTopOf="@id/negative_icon" />


                        <TextView
                            android:id="@+id/negative_count"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toTopOf="@id/negative_person_label"
                            app:layout_constraintEnd_toEndOf="@id/negative_title"
                            app:layout_constraintStart_toStartOf="@id/negative_icon"
                            app:layout_constraintTop_toBottomOf="@id/negative_title"
                            tools:text="16" />

                        <TextView
                            android:id="@+id/negative_person_label"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:gravity="center"
                            android:text="@string/person"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@id/negative_count"
                            app:layout_constraintStart_toStartOf="@id/negative_count"
                            app:layout_constraintTop_toBottomOf="@id/negative_count" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_info_pdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="8dp"
                    app:cardUseCompatPadding="true"
                    app:layout_constraintBottom_toTopOf="@id/card_info_odp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/positive_card">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/card_pdp_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pdp_label"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                            app:layout_constraintBottom_toTopOf="@id/pdp_processed_title"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <View
                            android:id="@+id/card_pdp_limiter"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:background="?android:attr/listDivider"
                            app:layout_constraintBottom_toTopOf="@id/pdp_processed_title"
                            app:layout_constraintEnd_toEndOf="@id/card_pdp_title"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/card_pdp_title" />

                        <TextView
                            android:id="@+id/pdp_processed_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Dalam Pengawasan"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toTopOf="@id/pdp_processed_value"
                            app:layout_constraintEnd_toStartOf="@id/pdp_finished_title"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/card_pdp_limiter" />

                        <TextView
                            android:id="@+id/pdp_processed_value"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toTopOf="@id/pdp_processed_percentage"
                            app:layout_constraintEnd_toEndOf="@id/pdp_processed_title"
                            app:layout_constraintStart_toStartOf="@id/pdp_processed_title"
                            app:layout_constraintTop_toBottomOf="@id/pdp_processed_title"
                            tools:text="961" />

                        <TextView
                            android:id="@+id/pdp_processed_percentage"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            app:layout_constraintBottom_toTopOf="@id/pdp_total_case_title"
                            app:layout_constraintEnd_toEndOf="@id/pdp_processed_value"
                            app:layout_constraintStart_toStartOf="@id/pdp_processed_value"
                            app:layout_constraintTop_toBottomOf="@id/pdp_processed_value"
                            tools:text="(54.17%)" />

                        <TextView
                            android:id="@+id/pdp_finished_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Selesai Pengawasan"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@id/pdp_processed_title"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/pdp_processed_title"
                            app:layout_constraintTop_toTopOf="@id/pdp_processed_title" />

                        <TextView
                            android:id="@+id/pdp_finished_value"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toTopOf="@id/pdp_finished_percentage"
                            app:layout_constraintEnd_toEndOf="@id/pdp_finished_title"
                            app:layout_constraintStart_toStartOf="@id/pdp_finished_title"
                            app:layout_constraintTop_toBottomOf="@id/pdp_finished_title"
                            tools:text="813" />

                        <TextView
                            android:id="@+id/pdp_finished_percentage"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            app:layout_constraintBottom_toTopOf="@id/pdp_total_case_title"
                            app:layout_constraintEnd_toEndOf="@id/pdp_finished_value"
                            app:layout_constraintStart_toStartOf="@id/pdp_finished_value"
                            app:layout_constraintTop_toBottomOf="@id/pdp_finished_value"
                            tools:text="(45.83%)" />

                        <TextView
                            android:id="@+id/pdp_total_case_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Total PDP"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toTopOf="@id/pdp_total_case_value"
                            app:layout_constraintEnd_toEndOf="@id/pdp_finished_title"
                            app:layout_constraintStart_toStartOf="@id/pdp_processed_title"
                            app:layout_constraintTop_toBottomOf="@id/pdp_processed_percentage" />

                        <TextView
                            android:id="@+id/pdp_total_case_value"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@id/pdp_total_case_title"
                            app:layout_constraintStart_toStartOf="@id/pdp_total_case_title"
                            app:layout_constraintTop_toBottomOf="@id/pdp_total_case_title"
                            tools:text="1774" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_info_odp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="8dp"
                    app:cardUseCompatPadding="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/card_info_pdp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/card_odp_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/odp_label"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                            app:layout_constraintBottom_toTopOf="@id/odp_processed_title"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <View
                            android:id="@+id/card_odp_limiter"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:background="?android:attr/listDivider"
                            app:layout_constraintBottom_toTopOf="@id/odp_processed_title"
                            app:layout_constraintEnd_toEndOf="@id/card_odp_title"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/card_odp_title" />

                        <TextView
                            android:id="@+id/odp_processed_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Dalam Pemantauan"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toTopOf="@id/odp_processed_value"
                            app:layout_constraintEnd_toStartOf="@id/odp_finished_title"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/card_odp_limiter" />

                        <TextView
                            android:id="@+id/odp_processed_value"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toTopOf="@id/odp_processed_percentage"
                            app:layout_constraintEnd_toEndOf="@id/odp_processed_title"
                            app:layout_constraintStart_toStartOf="@id/odp_processed_title"
                            app:layout_constraintTop_toBottomOf="@id/odp_processed_title"
                            tools:text="112" />

                        <TextView
                            android:id="@+id/odp_processed_percentage"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            app:layout_constraintBottom_toTopOf="@id/odp_total_case_title"
                            app:layout_constraintEnd_toEndOf="@id/odp_processed_value"
                            app:layout_constraintStart_toStartOf="@id/odp_processed_value"
                            app:layout_constraintTop_toBottomOf="@id/odp_processed_value"
                            tools:text="(71.34%)" />

                        <TextView
                            android:id="@+id/odp_finished_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Selesai Pemantauan"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@id/odp_processed_title"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/odp_processed_title"
                            app:layout_constraintTop_toTopOf="@id/odp_processed_title" />

                        <TextView
                            android:id="@+id/odp_finished_value"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="32sp"
                            android:textStyle="bold"
